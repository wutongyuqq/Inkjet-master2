<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:foreground="?selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_centerVertical="true"
            android:id="@+id/layout_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@mipmap/ic_annal_time_bg"
                android:layout_width="80dp"
                android:layout_height="90dp" />

            <TextView
                android:background="@android:color/white"
                android:id="@+id/tv_year"
                android:text="2019"
                android:textSize="12sp"
                android:layout_marginTop="7dp"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_day"
                android:text="03/19"
                android:textSize="13sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_time"
                android:text="13:51:30"
                android:textColor="@color/qmui_config_color_gray_3"
                android:layout_marginTop="3dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_day"
                android:layout_width="wrap_content"
                android:textSize="11sp"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/layout_date"
            android:layout_toLeftOf="@+id/tv_navigation"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_location"
                android:textColor="@color/qmui_config_color_gray_2"
                android:layout_width="match_parent"
                android:textSize="12sp"
                android:maxLines="2"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <me.samlss.ui.alpha.QMUIAlphaTextView
            android:id="@+id/tv_navigation"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:textSize="12sp"
            android:background="#FEC712"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/navigation"
            android:layout_width="55dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>