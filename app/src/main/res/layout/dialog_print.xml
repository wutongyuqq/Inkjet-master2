<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg_yellow"
    android:orientation="vertical">

    <me.samlss.inkjet.widgets.MaxHeightRecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        app:maxHeight="250dp"></me.samlss.inkjet.widgets.MaxHeightRecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <me.samlss.ui.alpha.QMUIAlphaTextView
            android:id="@+id/btn_abort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/abort_task"
            android:textColor="@color/qmui_config_color_gray_1"
            android:textSize="16sp" />

        <me.samlss.ui.alpha.QMUIAlphaTextView
            android:id="@+id/btn_end"
            android:layout_marginLeft="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/ended"
            android:textColor="@color/qmui_config_color_gray_1"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>